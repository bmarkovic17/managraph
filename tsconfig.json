{
  "extends": "@tsconfig/node14/tsconfig.json",

  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [ "src/**/*" ]
}
